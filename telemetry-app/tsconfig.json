{
    "compileOnSave": false,
    "files": [
        "src/main.ts",
        "src/polyfills.ts",
    ],
    "compilerOptions": {
        "baseUrl": "src",
        "resolveJsonModule": true,
        "importHelpers": true,
        "paths": {
            "@app/*": ["app/*"],
            "@assets/*": ["assets/*"],
            "@env/*": ["environments/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "plugins": [{
        "name": "@angular/language-service"
    }]
}
